%products{"ng-controller" => "ProductsCtrl"}
  %table
    %thead
      %th{colspan: 2} Item
      %th Description
      %th Variant
      %th QTY
      %th Bulk
      %th Price
    %tr.product{"ng-repeat" => "product in data.products "}
      %td
        %img{src: "{{ product.master.images[0].mini_url }}", alt: "{{product.master.images[0].alt}}"}
      %td
        {{ product.name }}
      %td {{ product.description }}
      %td {{ product.master.id }}
      %td Quantity thing
      %td.group_buy{"ng-class" => "{enabled: product.group_buy}"} 
        Not available
      %td.price
        %small from
        $ {{ product.price }}

  %pre {{ data.products | json }}
